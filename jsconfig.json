{
  "compilerOptions": {
    "noLib": false,
    // "target": "esnext",
    "checkJs": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist",
    "bower_components",
    "tmp",
    "temp",
    "jspm_packages"
  ]
}
